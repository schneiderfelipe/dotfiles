#!/bin/bash

# Alias definitions.
# You may want to put all your additions into a separate file like
# ~/.bash_aliases, instead of adding them to ~/.bashrc directly.
# See /usr/share/doc/bash-doc/examples in the bash-doc package.

if [ -f ~/.bash_aliases ]; then
    . ~/.bash_aliases
fi


# Preferred editor for local and remote sessions
if [[ -n $SSH_CONNECTION ]]; then
  export EDITOR='vim'
else
  export EDITOR='vim'
fi

# Uncomment the following line if you are using less version >= 551 and want to
# enable mouse scrolling support in `bat` when running inside tmux. This might
# disable text selection, unless you press shift.
export LESS="--RAW-CONTROL-CHARS --quit-if-one-screen --mouse"

# Use bat as the default man pager
export MANPAGER="sh -c 'col -bx | bat -l man -p'"


# Directory colors
export LS_COLORS=$(vivid generate monokai-pro)

# Options and bindings for fzf
export FZF_DEFAULT_OPTS='--height 40% --info=inline --cycle'
export FZF_TMUX_OPTS="-d 40%"
# Monokai-inspired theme for fzf
export FZF_DEFAULT_OPTS="$FZF_DEFAULT_OPTS \
  --color='fg:-1,bg:-1,hl:#a9dc76' \
  --color='fg+:#fcfcfa,bg+:#2d2a2e,hl+:#bcef8a' \
  --color='info:#727072,prompt:#a9dc76,pointer:#fc9867' \
  --color='marker:#fc9867,spinner:#bcef8a,header:#fc9867'"

# Set up Broot
source /home/schneider/.config/broot/launcher/bash/br

# Options for Multiwfn and xTB
export OMP_STACKSIZE=200M
# ulimit -s unlimited

# Set up Rust environment
. "$HOME/.cargo/env"

# Set up Haskell environment
[ -f "/home/schneider/.ghcup/env" ] && source "/home/schneider/.ghcup/env"

# Correct errors in previous console commands
eval "$(thefuck --alias)"

# Generated for envman. Do not edit.
[ -s "$HOME/.config/envman/load.sh" ] && source "$HOME/.config/envman/load.sh"

# Last thing of this file, starship
eval "$(starship init zsh)"
