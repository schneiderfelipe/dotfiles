#!/bin/sh

# Before anything, start tmux
if command -v tmux &> /dev/null && [ -z "$TMUX" ] \
    && [[ ! "$TERM" =~ tmux ]] && [[ ! "$TERM" =~ screen ]] \
    && [ -n "$PS1" ]; then
  exec tmux new-session -s $(names)
fi

# You might have to change your $PATH.
export PATH=~/.local/bin:$PATH

# Path configurations for Orca
export PATH=/opt/orca:$PATH
export LD_LIBRARY_PATH=/opt/orca:$LD_LIBRARY_PATH

if command -v xtb &> /dev/null && [ ! -f /opt/orca/otool_xtb ]; then
    ln -s $(which xtb) /opt/orca/otool_xtb
fi

# >>> juliaup initialize >>>
# !! Contents within this block are managed by juliaup !!
case ":$PATH:" in *:$HOME/.juliaup/bin:*);; *)
    export PATH=$HOME/.juliaup/bin${PATH:+:${PATH}};;
esac
# <<< juliaup initialize <<<
